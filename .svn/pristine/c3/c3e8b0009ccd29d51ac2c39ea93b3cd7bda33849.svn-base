html,body{
	width: 100%;
	height: 100%;
	overflow-x: hidden;
	overflow-y: scroll;
	overflow-scrolling: touch;
    -webkit-overflow-scrolling: touch;
}
body{
	position: relative;
}
.company-header{
    width: 100%;
    height: 2.5rem;
    background-color: rgb(50, 50, 50);
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 0.5rem;
    color: #fff;
}

.aui-iconfont{
	font-size: 1.15rem;
}
.company-icon{
	padding-right: 1.15rem;
}
.company-nav-box{
	width: 100%;
	/*background-color: rgb(62, 62, 62);*/
	background-color: #fff;
	color: #fff;
	display: none;
	position: absolute;
	left: 0;
	top: 2.5rem;
	z-index: 6;
}
.company-nav{
	width: 100%;
}
.company-nav-list{
	width: 100%;
    color: #181818;
}
.company-list-icon{
	width: 0.7rem;
	height: 0.7rem;
	display: inline-block;
	border-right: 1.5px solid #5a5a5a;
	border-bottom: 1.5px solid #5a5a5a;
	transform: rotate(45deg);
}
.company-list-iconA{
	transform: rotate(45deg);
	width: 0.7rem;
	height: 0.7rem;
	display: inline-block;
	border-right: 1.5px solid #82cfd7;
	border-bottom: 1.5px solid #82cfd7;
}
.blue{
	color: #7dced6;
}

.up{
	background: url('../img/arrow_u.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
}
.display-box{
    display: -webkit-box;
    display: -moz-box;
    display: box;
    color: inherit;
}
.flex-between{
	display: flex;
	display: -webkit-flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.nav-height{
	height: 2.5rem;
	line-height: 2.5rem;
	border-bottom: 0.05rem solid rgb(95, 95, 95);
	margin: 0 1.0rem;
}
.nav-heightA{
	height: 2.5rem;
	line-height: 2.5rem;
	border-bottom: 0.05rem solid #5dc2cc;
	margin: 0 1.0rem;
}


.company-menu{
	display: none;
	background-color: #f0f0f0;
}
.click-active{
	background-color: #f0f0f0;
}
.company-menu-list{
	width: 100%;
	color: #a5a5a5;
}
.company-logo{
	display: flex;
	display: -webkit-flex;
	flex-direction: row;
}
.company-logo-img{
	width: 1.75rem;
	height: 1.75rem;
}
.company-logo-text{
	margin-left: 0.6rem;
	font-size: 0.75rem;
}
.company-logo-text>p{
	color: #ebebeb ;
}

/* 底部 */
.company-footer{
	margin-top: 2.0rem;
	background: url('../img/fd_bg.png');
	background-repeat: no-repeat;
	background-size: 100% 100%;
	width: 100%;
	height: 5.0rem;
	padding: 1.0rem;

}
.company-footer>p{
	font-size: 0.6rem;
	padding: 0.2rem 0;
	color: #bdbdbd;
}
.company-footer>p:last-child{
	color: normal;
}
.footer-logo{
	display: flex;
	display: -webkit-flex;
	flex-direction: row;
}
.footer-logo>img{
	width: 1.0rem;
	height: 1.0rem;
	margin-left: 2.0rem;
}
.compant-tel{
	position: fixed;
	right: 0;
	top: 22rem;
	background: url('../img/tel.png');
	background-repeat: no-repeat;
	width: 7.15rem;
	height: 2.0rem;
	line-height: 2.0rem;
	background-size: 100% 100%;
}
.compant-tel>a{
	color: #fff;
	font-size: 0.8rem;
	margin-left: 2.0rem;
}







